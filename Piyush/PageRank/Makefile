# Makefile for compiling PageRank program

# Compiler
CXX = g++
CXXFLAGS = -fopenmp -Wall -I../common/NIST

# Target executable
TARGET = page_rank

# Directories
SRCDIR = .
NISTDIR = ../common/NIST

# Source files
SRCS = $(SRCDIR)/page_rank.cpp $(NISTDIR)/mmio.c

# Object files (auto-generated by replacing .cpp and .c with .o)
OBJS = $(SRCS:.cpp=.o)

# Rule to build the executable
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJS)

# Rule to compile .cpp and .c files into .o object files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

%.o: %.c
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean up object files and executable
# clean:
# 	rm -f $(OBJS) $(TARGET)
